# Database Configuration
# 로컬 개발: PostgreSQL (docker-compose up -d)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/schedule_parser_dev
# SQLite로 돌아가려면: DATABASE_URL=sqlite:///./schedule_parser.db

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret

FRONTEND_URL=http://localhost:5173

# Admin user Google ID (without "google_" prefix)
DEV_ADMIN_ID=your-google-id

# OpenAI API Key for LLM parser (GPT-4.1-nano)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Token Encryption Key (Fernet symmetric encryption for OAuth tokens)
# IMPORTANT: Keep this secret! Never commit to version control
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key

# Railway Volume Mount Path (optional, Railway sets this automatically)
# RAILWAY_VOLUME_MOUNT_PATH=/app/data
